<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/uikit@3.9.4/dist/css/uikit.min.css" />
        <link rel="stylesheet" href={{asset('assets/css/style.css')}} />
    </head>
    <body>
        <nav class="uk-navbar-container uk-margin" uk-navbar>

            <div class="uk-navbar-left">
                {% if app.user %}
                    {% if  app.user.roles[0] == 'ROLE_ADMIN' %}
                        <span class="uk-label"> Welcome Admin <span>
                    {% else %}
                         <span class="uk-label"> Welcome User <span>
                    {% endif %}
                {% else %}
                    <span class="uk-label"> Welcome Guest <span>
                {% endif %}
            </div>

            <div class="uk-navbar-center">

                <div class="uk-navbar-center-left"><div>
                    <ul class="uk-navbar-nav">
                        <li><a href="/">Home</a></li>
                        <li><a href="/livre">Livre</a></li>
                       
                        
                    </ul>
                </div></div>
                 <a href={{path('home')}}><img src={{asset('assets/img/bookstore.png')}} width="50px"/></a>
                <div class="uk-navbar-center-right"><div>
                    <ul class="uk-navbar-nav">
                         <li><a href="/genre">Genre</a></li>
                        <li><a href="/auteur">Auteur</a></li>
                    </ul>
                </div></div>
            </div>
            <div class="uk-navbar-right">
                <div>
                    <ul class="uk-navbar-nav">
                        {% if app.user %}
                            <li><a href="/logout">Log out</a></li>
                        {% else %}
                            <li><a href="/login">Sign in</a></li>
                            <li><a href="/register">Sign up</a></li>
                        {% endif %}
                    </ul>
                </div>  
            
            </div>
        </nav>
        {% block body %}{% endblock %}
        <script src="https://cdn.jsdelivr.net/npm/uikit@3.9.4/dist/js/uikit.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/uikit@3.9.4/dist/js/uikit-icons.min.js"></script>
    </body>
</html>
